  "scripts": {
    "dev": "npx tsc-watch --project . --outDir ./dist --onSuccess \"nodemon ./dist/bin/www.js\"s",
    "build": "npx tsc",
    "start": "node --env-file=.env dist/src/index.js",
    "db:generate": "npx drizzle-kit generate",
