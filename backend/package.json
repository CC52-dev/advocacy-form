    "db:pull": "npx drizzle-kit pull",
    "db:check": "npx drizzle-kit check",
    "db:up": "npx drizzle-kit up",
    "db:all": "npx drizzle-kit generate && npx drizzle-kit migrate && npx drizzle-kit push && npx drizzle-kit pull && npx drizzle-kit check && npx drizzle-kit up"
  },
